<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.myself.mapper.StudentMapperInteface">
	<select id="selectAllStudent" resultMap="result">
		select * from tbl_student
	</select>
	
	<select id="selectStudentById" parameterType="int" resultType="Student">
		select * from tbl_student 
		<if test="id!=null">
			where id=#{id}
		</if>
	</select>
	
	<select id="selectStudentByName" parameterType="java.lang.String" resultMap="result">
		select * from tbl_student
		<if test="!name.isEmpty()">
			 where name like #{name}
		</if>
	</select>
	
	<select id="selectStudentByPhoneOrName" parameterType="map" resultMap="result">
		<choose>
			<when test="name!=null and phone==null">
				select * from tbl_student where name=#{name}
			</when>
			<when test="name==null and phone!=null">
				select * from tbl_student where phone=#{phone} 
			</when>
			<when test="name!=null and phone!=null">
				select * from tbl_student where name=#{name} and phone=#{phone} 
			</when>
			<otherwise>
				select 'error'
			</otherwise>
		</choose>
	</select>
	
	<select id="selectManyStudentById" resultMap="result">
		select * from tbl_student where id in
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</select>
	
	<insert id="insertStudent" parameterType="Student">
		<!--<selectKey keyProperty="id" resultType="int" order="BEFORE">
			<if test="_databaseId=='oracle'">
				select mySeq.nextval from dual
			</if>
			<if test="_databaseId=='db2'">
				select nextval for mySeq from sysibm.sysdummy1
			</if>
			<if test="_databaseId=='sqlserver'">
				select next value for mySeq
			</if>
		</selectKey> -->
		insert into tbl_student (name,branch,percentage,phone,email) values (#{name},#{branch},#{percentage},#{phone},#{email})
	</insert>
	
	<update id="updateStudent" parameterType="Student">
		update tbl_student 
		<set>
			<if test="!name.isEmpty()">name=#{name}</if>
			<if test="!branch.isEmpty()">,branch=#{branch}</if>
			<if test="percentage!=0">,percentage=#{percentage}</if>
			<if test="phone!=0">,phone=#{phone}</if>
			<if test="!email.isEmpty()">,email=#{email}</if>
		</set>
		where id=#{id}
	</update>
	
	<delete id="deleteStudentById" parameterType="int">
		delete from tbl_student where id=#{id}
	</delete>
	
	<resultMap type="Student" id="result">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="branch" column="branch"/>
		<result property="percentage" column="percentage"/>
		<result property="phone" column="phone"/>
		<result property="email" column="email"/>
	</resultMap>
	
</mapper>