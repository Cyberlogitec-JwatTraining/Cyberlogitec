<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="vn.com.cyberlogitec.jwat.mapper.StudentMapper">
	<resultMap id = "result" type = "Student">
	       <result property = "id" column = "ID"/>
	       <result property = "name" column = "NAME"/>
	       <result property = "branch" column = "BRANCH"/>
	       <result property = "percentage" column = "PERCENTAGE"/>
	       <result property = "phone" column = "PHONE"/>
	       <result property = "email" column = "EMAIL"/>
	</resultMap>

    <insert id="insertStudent" parameterType="Student" >
        INSERT INTO Student(ID, NAME, BRANCH, PERCENTAGE, PHONE, EMAIL ) VALUES (#{id}, #{name}, #{branch}, #{percentage}, #{phone}, #{email});
    </insert>
 
    <update id="updateStudent" parameterType="Student">
        UPDATE Student SET EMAIL = #{email}, NAME = #{name}, BRANCH = #{branch}, PERCENTAGE = #{percentage}, PHONE = #{phone} WHERE ID = #{id};
    </update>
     
    <delete id="deleteStudentById" parameterType="int">
        DELETE from Student WHERE ID = #{id};
    </delete>
     
    <select id="selectAllStudent" resultMap="result">
        SELECT * FROM Student;
    </select>
     
    <select id="selectStudentById" parameterType="int" resultType="Student">
        SELECT * FROM Student WHERE ID = #{id};
    </select>
    
   	<!-- CÃ‚U 1 -->
    <select id="selectStudentByName" parameterType="String" resultType="Student">
        SELECT * FROM Student WHERE 1=1
        <if test = "studentName != null">
			AND NAME LIKE CONCAT('%',#{studentName},'%') 
		</if>
    </select>
    
    <select id="selectStudentByNameOrPhone" parameterType="String" resultType="Student">
        SELECT * FROM Student WHERE 1=1
        <choose>
	        <when test = "name != null">
				AND NAME LIKE CONCAT('%',#{name},'%') 
			</when>
			<when test = "phone != null">
				AND PHONE LIKE #{phone} 
			</when>
        </choose>
    </select>
    
     <select id="selectStudentByMultiId" resultMap="result">
    	SELECT * FROM Student where id in
    	<foreach item="id" index="index" collection="array" open="(" separator="," close=")">
    		#{id}
    	</foreach>
    </select>
    
    <update id="updateStudentById">
	  UPDATE Student 
	    <set>
	      <if test="name != null">name=#{name},</if>
	      <if test="branch != null">branch=#{branch},</if>
	      <if test="percentage != null">percentage=#{percentage},</if>
	      <if test="phone != null">phone=#{phone},</if>
	      <if test="email != null">email=#{email} </if>
	    </set>
	  WHERE id=#{id}
	</update>
</mapper>