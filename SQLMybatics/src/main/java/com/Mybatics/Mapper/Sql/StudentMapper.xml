<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.Mybatics.Mapper.StudentMapper">
	<select id="selectAllStudent" resultMap="result">
		select * from student
	</select>
	
	<select id="selectStudentById" parameterType="int" resultType="Student">
		select * from student 
		<if test="id!=null">
			where id=#{id}
		</if>
	</select>
	
	<select id="selectStudentByName" parameterType="java.lang.String" resultMap="result">
		select * from student
		<if test="!name.isEmpty()">
			 where name like #{name}
		</if>
	</select>
	
	<select id="selectStudentByPhoneOrName" parameterType="map" resultMap="result">
		<choose>
			<when test="name!=null and phone==null">
				select * from student where name=#{name}
			</when>
			<when test="name==null and phone!=null">
				select * from student where phone=#{phone} 
			</when>
			<when test="name!=null and phone!=null">
				select * from student where name=#{name} and phone=#{phone} 
			</when>
			<otherwise>
				select 'error'
			</otherwise>
		</choose>
	</select>
	
	<select id="selectManyStudentById" resultMap="result">
		select * from student where id in
		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
			#{item}
		</foreach>
	</select>
	
	<insert id="insertStudent" parameterType="Student">
		
		insert into student (name,branch,percentage,phone,email) values (#{name},#{branch},#{percentage},#{phone},#{email})
	</insert>
	
	<update id="updateStudent" parameterType="Student">
		update student 
		<set>
			<if test="!name.isEmpty()">name=#{name}</if>
			<if test="!branch.isEmpty()">,branch=#{branch}</if>
			<if test="percentage!=0">,percentage=#{percentage}</if>
			<if test="phone!=0">,phone=#{phone}</if>
			<if test="!email.isEmpty()">,email=#{email}</if>
		</set>
		where id=#{id}
	</update>
	
	<delete id="deleteStudentById" parameterType="int">
		delete from student where id=#{id}
	</delete>
	
	<resultMap type="Student" id="result">
		<result property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="branch" column="branch"/>
		<result property="percentage" column="percentage"/>
		<result property="phone" column="phone"/>
		<result property="email" column="email"/>
	</resultMap>
	
</mapper>