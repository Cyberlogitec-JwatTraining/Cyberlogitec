<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="studentRepository" class="vn.com.cyberlogitec.BeanFactory.StudentRepositoryUsingXML"/>
	
	<bean id="studentService" class="vn.com.cyberlogitec.BeanFactory.StudentServiceUsingXML">
 		<constructor-arg name="repository" ref="studentRepository"/>
	</bean>	

</beans>