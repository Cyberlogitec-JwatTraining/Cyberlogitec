<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
		
	<context:component-scan base-package="vn.com.cyberlogitec.practice_test2.ex2"></context:component-scan>
	<bean id ="student_bean" class = "vn.com.cyberlogitec.practice_test2.ex2.Student">
		<property name="id" value="sv1"></property>
		<property name="name" value="Le Cao Duc Huy"></property>
	</bean>
	
	<bean id = "studentRepo" class = "vn.com.cyberlogitec.practice_test2.ex2.StudentRepositoryImp">
		<constructor-arg name="s" ref="student_bean"></constructor-arg>
	</bean>
</beans>




