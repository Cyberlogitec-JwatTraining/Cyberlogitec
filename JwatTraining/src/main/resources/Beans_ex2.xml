<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id = "Student_ex2" class = "vn.com.cyberlogitec.practice_test2.ex2.Student">
		<property name="id" value="sv1"></property>
		<property name="name" value="Le Cao Duc Huy"></property>
	</bean>
	
	<bean id = "StudentRepository" class = "vn.com.cyberlogitec.practice_test2.ex2.StudentRepositoryImp">
		<constructor-arg name = "s" ref = "Student_ex2"></constructor-arg>
	</bean>
	
	<bean id = "StudentService" class = "vn.com.cyberlogitec.practice_test2.ex2.StudentServiceImp">
		<constructor-arg name = "studentRepo" ref = "StudentRepository"></constructor-arg>
	</bean>

</beans>